                    textarea(class="textarea" id="message" placeholder="e.g. Hello world")
                    .submit
                        input(type="submit" value="Enter!" id="send" class="button is-link is-medium")
        footer
            div
                span
                    | Copyright Dominik Szczepaniak 2018 &nbsp; | &nbsp;
                a(href="https://devszczepaniak.pl")
                    | devszczepaniak.pl
        script(type='text/javascript').
            const room = "!{room}"
            const nickname = "!{nickname}"
        script(src="dist/main.js" async)
