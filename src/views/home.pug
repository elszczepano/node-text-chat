html
    head
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css")
        link(rel="stylesheet" href="dist/style.css")
    body
        .wrapper
            .wrapper__content
                h1(class="wrapper__content__header--first")
                    | Welcome to the chat!
                h2(class="wrapper__content__header--second")
                    | Choose a chatroom and enter your nickname. Then click 'Enter!' and chat with other people!
                form(action="/chatroom/1" method="POST" id="joinForm" class="wrapper__content__form")
                    input(class="input is-medium wrapper__content__form__input" id="user" type="text" placeholder="Enter your nickname" name="nickname" required)
                    .wrapper__content__form__room
                        div(class="select is-medium")
                            select(name="room" id="room")
                                option(value="1")
                                    | Room 1
                                option(value="2")
                                    | Room 2
                                option(value="3")
                                    | Room 3
                                option(value="4")
                                     | Room 4
                                option(value="5")
                                    | Room 5
                    .wrapper__content__form__submit
                        input(type="submit" value="Enter!" class="button is-link is-medium")
        footer(class="main__footer")
            div
                span
                    | Copyright Dominik Szczepaniak 2018 &nbsp; | &nbsp;
                a(href="https://devszczepaniak.pl")
                    | devszczepaniak.pl
        script(src="dist/room.js" async)