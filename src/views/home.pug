html
    head
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,700")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css")
        link(rel="stylesheet" href="css/main.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js")
    body
        .wrapper
            .wrapper__content
                h1
                    | Welcome to the chat!
                h2
                    | Choose a chatroom and enter your nickname. Then click 'Enter!' and chat with other people!
                form(action="/chatroom" method="POST")
                    input(class="input is-medium" type="text" placeholder="Enter your nickname" name="nickname" required)
                    .field
                        .control
                            div(class="select is-medium")
                                select(name="room")
                                    option(value="1")
                                        | Room 1
                                    option(value="2")
                                        | Room 2
                                    option(value="3")
                                        | Room 3
                                    option(value="4")
                                        | Room 4
                                    option(value="5")
                                        | Room 5
                        .submit
                            input(type="submit" value="Enter!" class="button is-link is-medium")
        footer
            | Copyright Dominik Szczepaniak 2018 &nbsp; | &nbsp;
            a(href="https://devszczepaniak.pl")
                | devszczepaniak.pl